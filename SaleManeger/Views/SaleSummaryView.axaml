<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:anim="clr-namespace:Avalonia.Animation ;assembly=Avalonia.Animation"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SaleManeger.Views.SaleSummaryView">

	<Grid Margin="5" ColumnDefinitions="Auto, *" RowDefinitions="50, Auto,Auto,Auto">
        <Button Content="Cofnij" Margin="5" Command="{Binding OpenClientSelectionCommand}"/>
		<TextBlock Grid.Column="1" TextAlignment="Center" FontSize="20" VerticalAlignment="Center" Text="{Binding ClientsLeft, StringFormat='Pozostało {0} klientów z zamówieniami'}}"/>

		<Expander Grid.ColumnSpan="2" Grid.Row="1" FontSize="20" Header="Pozostałe zamówienia" ExpandDirection="Down">
			<TextBlock Text="{Binding OrdersLeft}"/>
		</Expander>

		<Expander Grid.ColumnSpan="2" Grid.Row="2" FontSize="20" Header="Zamówione ogólnie" ExpandDirection="Down">
			<TextBlock Text="{Binding AllOrders}"/>
		</Expander>

		<Expander Grid.ColumnSpan="2" Grid.Row="3" FontSize="20" Header="Sprzedane ogólnie" ExpandDirection="Down">
			<TextBlock Text="{Binding SoldAll}"/>
		</Expander>
		
	</Grid>
	
</UserControl>
